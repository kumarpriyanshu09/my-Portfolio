# Allow build scripts for required dependencies
enable-pre-post-scripts=true

# Approve specific packages to run build scripts
@vercel:registry=https://registry.npmjs.org/
sharp:registry=https://registry.npmjs.org/
esbuild:registry=https://registry.npmjs.org/

# Auto-approve builds for these packages
auto-install-peers=true
strict-peer-dependencies=false
